<body>
  <h1>Select Difficulty Level</h1>
  <div class="button-group" id="difficulty-buttons">
    <button type="button" class="btn btn-primary" onclick="setDifficulty('Easy')">Easy</button>
    <button type="button" class="btn btn-primary" onclick="setDifficulty('Medium')">Medium</button>
    <button type="button" class="btn btn-primary" onclick="setDifficulty('Hard')">Hard</button>
  </div>

  <h1>Select Theme</h1>
  <div class="button-group" id="theme-buttons">
    <button type="button" class="btn btn-secondary" onclick="setTheme('Light')">Light Theme</button>
    <button type="button" class="btn btn-dark" onclick="setTheme('Dark')">Dark Theme</button>
  </div>
  
  <div class="button-group" id="theme-buttons">
    <a href="/logout" class="btn btn-light">Sign out</a>
  </div>
</body>
