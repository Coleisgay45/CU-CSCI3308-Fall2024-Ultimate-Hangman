{{>message}}

<form method="post" action="/dictionaryword">
  <div class="mb-3"> <!--instead of styling them individually -->
    <h1>Play Hangman</h1>
  <!-- Word and definition section -->
    {{#if word}}
      <p><strong>Guess The Word:</strong> {{word}}</p>
    {{else}}
      <p>No word available. Please try again.</p>
    {{/if}}
      <div class="Hangman-Pic">
        <img src="img/hangman-0.svg">
    </div>
    
    <div id="lettersDisplay" ></div>
    <div id="guessMessage"></div>
    <div class="Game-box" style="font-size: 20px; margin-top: 10px; color: blue;">
        <div class = "Keyboard">
            <button type="button" onclick="checkGuess('A', this)">A</button>
            <button type="button" onclick="checkGuess('B', this)">B</button>
            <button type="button" onclick="checkGuess('C', this)">C</button>
            <button type="button" onclick="checkGuess('D', this)">D</button>
