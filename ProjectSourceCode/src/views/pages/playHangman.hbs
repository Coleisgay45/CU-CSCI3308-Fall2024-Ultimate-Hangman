
<form method="GET" action="/playHangman">
  <div class="play-hangman-container"> <!--instead of styling them individually -->

    {{!-- <div class="Hangman-Pic">
        <img id="hangman-image" src = "img/hangman-0.svg" alt="Hangman Step">
    </div> --}}

    <h1>Play Hangman</h1>  <!-- is this needed idk-->
  <!-- Word and definition section -->

    <div id="lettersDisplay" ></div>
    <div id="guessMessage"></div>
        {{#if word}}
      <p><strong>Guess The Word: </strong></p>
      <span style="display: none" id="wordToMatch">{{word}}</span>
    {{else}}
      <p>No word available. Please try again.</p>
    {{/if}}
      <div class="Hangman-Pic">
        <img id="hangman-image" src = "img/hangman-0.svg" alt="Hangman Step">
      </div>
    <div id="revealWord" style="display: none; color: red; font-weight: bold;">
    The correct word was: <span id="correctWord"></span>
    </div>
     <div style="margin-top: 20px;">
    <button onclick="initializeGame()">Restart Game</button>
    </div>
    <div class="Game-box" style="font-size: 20px; margin-top: 10px; color: blue;">
        <div class = "Keyboard">
            <button type="button" onclick="checkGuess('A', this)">A</button>
            <button type="button" onclick="checkGuess('B', this)">B</button>
            <button type="button" onclick="checkGuess('C', this)">C</button>
            <button type="button" onclick="checkGuess('D', this)">D</button>
            <button type="button" onclick="checkGuess('E', this)">E</button>
            <button type="button" onclick="checkGuess('F', this)">F</button>
            <button type="button" onclick="checkGuess('G', this)">G</button>
            <button type="button" onclick="checkGuess('H', this)">H</button>
            <button type="button" onclick="checkGuess('I', this)">I</button>
            <button type="button" onclick="checkGuess('J', this)">J</button>
            <button type="button" onclick="checkGuess('K', this)">K</button>
            <button type="button" onclick="checkGuess('L', this)">L</button>
            <button type="button" onclick="checkGuess('M', this)">M</button>
            <button type="button" onclick="checkGuess('N', this)">N</button>
            <button type="button" onclick="checkGuess('O', this)">O</button>
            <button type="button" onclick="checkGuess('P', this)">P</button>
            <button type="button" onclick="checkGuess('Q', this)">Q</button>
            <button type="button" onclick="checkGuess('R', this)">R</button>
            <button type="button" onclick="checkGuess('S', this)">S</button>
            <button type="button" onclick="checkGuess('T', this)">T</button>
            <button type="button" onclick="checkGuess('U', this)">U</button>
            <button type="button" onclick="checkGuess('V', this)">V</button>
            <button type="button" onclick="checkGuess('W', this)">W</button>
            <button type="button" onclick="checkGuess('X', this)">X</button>
            <button type="button" onclick="checkGuess('Y', this)">Y</button>
            <button type="button" onclick="checkGuess('Z', this)">Z</button>
        </div>

    </div>
  </div>


