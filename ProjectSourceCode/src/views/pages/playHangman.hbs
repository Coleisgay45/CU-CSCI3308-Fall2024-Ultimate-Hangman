            <button type="button" onclick="checkGuess('G', this)">G</button>
            <button type="button" onclick="checkGuess('H', this)">H</button>
            <button type="button" onclick="checkGuess('I', this)">I</button>
            <button type="button" onclick="checkGuess('J', this)">J</button>
            <button type="button" onclick="checkGuess('K', this)">K</button>
            <button type="button" onclick="checkGuess('L', this)">L</button>
            <button type="button" onclick="checkGuess('M', this)">M</button>
            <button type="button" onclick="checkGuess('N', this)">N</button>
            <button type="button" onclick="checkGuess('O', this)">O</button>
            <button type="button" onclick="checkGuess('P', this)">P</button>
            <button type="button" onclick="checkGuess('Q', this)">Q</button>
            <button type="button" onclick="checkGuess('R', this)">R</button>
            <button type="button" onclick="checkGuess('S', this)">S</button>
            <button type="button" onclick="checkGuess('T', this)">T</button>
            <button type="button" onclick="checkGuess('U', this)">U</button>
